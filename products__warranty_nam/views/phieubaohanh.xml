<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="phieubaohanh_view" model="ir.ui.view">
            <field name="name">phieubaohanh.sp.view</field>
            <field name="model">phieubaohanh.sp</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                       <div class="oe_sv">
                           <h1>
                               <field name = "name" readonly ="1"/>
                           </h1>
                           <group>
                               <group>
                                   <field name ="namecus"/>
                                   <br>
                                   </br>
                                   <field name ="supplier"/>
                                    <br>
                                    </br>
                                   <field name ="tags"/>
                                    <br>
                                    </br>
                                   <field name= "receive"/>
                                   <br>
                                   </br>
                               </group>

                               <group>
                                    <field name= "date"/>
                                   <br>
                                   </br>
                                    <field name= "datereturn"/>
                                   <br>
                                   </br>
                                   <field name= "price"/>
                                   <br>
                                   </br>
                                    <field name= "name_employee"/>
                                   <br>
                                   </br>
                                </group>
                           <label for="product" string="Tên sản phẩm" class="oe_edit_only"/>
                           <field name="product"/>
                           <br>
                           </br>
                               <field name= "note"/>
                           </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="phieubaohanh_tree_view" model="ir.ui.view">
            <field name="name">phieubaohanh.sp.view</field>
            <field name="model">phieubaohanh.sp</field>
            <field name="arch" type="xml">
                <tree string="Phiếu bảo hành" default_order="create_date desc">
                    <field name="name"/>
                    <field name="namecus"/>
                    <field name="product"/>
                    <field name ="date"/>
                    <field name="datereturn"/>
                    <field name="receive"/>

                </tree>
            </field>
        </record>

        <record id="phieubaohanh_action" model="ir.actions.act_window">
            <field name="name">Danh sách phiếu bảo hành</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">phieubaohanh.sp</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo phiếu bảo hành mới !
                </p>

            </field>
        </record>

         <menuitem id="phieubaohanh_root"
                    name="Product Warranty"
                    sequence="1"/>
        <!-- sinh viên -->
        <menuitem id="phieubaohanh_sp_root"
                    name="Bảo hành"
                    parent="phieubaohanh_root"
                    action = "phieubaohanh_action"
                    sequence="10"/>

    </data>
</odoo>
